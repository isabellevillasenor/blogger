<h3 style="color:#BA9C7F;">Post A Comment</h3>

<%= form_for [ @article, @comment ] do |f| %>
    <%= f.label :author_name, 'Your Name:' %><br/>
    <%= f.text_field :author_name %><br/>

    <%= f.label :body, 'Comment:' %><br/>
    <%= f.text_area :body %><br/>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>

